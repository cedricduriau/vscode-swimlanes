{
  "name": "swimlanes",
  "displayName": "Swimlanes",
  "description": "A VS Code extension for creating and managing swimlane diagrams",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.102.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/example/swimlanes-vscode"
  },
  "categories": [
    "Visualization",
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "swimlanes.createDiagram",
        "title": "Create Swimlanes.io Diagram",
        "category": "Swimlanes"
      },
      {
        "command": "swimlanes.preview",
        "title": "Preview Swimlanes Diagram",
        "category": "Swimlanes",
        "icon": "$(open-preview)"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "swimlanes.createDiagram"
        },
        {
          "command": "swimlanes.preview",
          "when": "editorLangId == swimlanes"
        }
      ],
      "editor/title": [
        {
          "command": "swimlanes.preview",
          "when": "editorLangId == swimlanes",
          "group": "navigation"
        }
      ]
    },
    "languages": [
      {
        "id": "swimlanes",
        "aliases": ["Swimlanes", "swimlanes"],
        "extensions": [".swimlanes"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "swimlanes",
        "scopeName": "source.swimlanes",
        "path": "./syntaxes/swimlanes.tmLanguage.json"
      }
    ],
    "configuration": {
      "title": "Swimlanes",
      "properties": {
        "swimlanes.debug.dumpHtml": {
          "type": "boolean",
          "default": false,
          "description": "Dump generated HTML to temporary files for debugging purposes"
        },
        "swimlanes.debug.enableConsoleOutput": {
          "type": "boolean",
          "default": false,
          "description": "Enable detailed console logging for debugging"
        },
        "swimlanes.preview.autoRefresh": {
          "type": "boolean",
          "default": true,
          "description": "Automatically refresh preview when swimlanes files are edited"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.102.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "esbuild": "^0.25.3",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
